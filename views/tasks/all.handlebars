
<div class="container-all">
  <h1>Todas as Tarefas</h1>
  <div class="task-empty">
    {{#if emptyTasks}}
      <p>Não há tarefas cadastradas</p>
    {{/if}}
  </div>

  <div class="task-list">
    <div class="task-view">
      {{#each tasks}}
        <div class="content-task">
          {{#if this.done}}
            <a href="/tasks/edit/{{this.id}}" class="title done">{{this.title}}</a>
          {{else}}
            <a href="/tasks/edit/{{this.id}}" class="title">{{this.title}}</a>
          {{/if}}
          <div class="actions">
            <form action="/tasks/updatestatus" method="POST">
              <input type="hidden" name="id" value={{this.id}}>
              <input type="hidden" name="done" value={{this.done}}>
              <button type="submit">
                <i class="bi bi-check2"></i>
              </button>
            </form>
            <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="POST">
              <input type="hidden" name="id" value={{this.id}}>
              <button type="submit">
                <i class="bi bi-x-lg"></i>
              </button>
            </form>
          </div>
        </div>
    {{/each}}
  </div>
</div>